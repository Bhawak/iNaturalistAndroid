<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarText" parent="@android:style/TextAppearance">
     <item name="android:textColor">#ffffff</item>
  </style>
    <style name="ButtoniNatAppTheme" parent="android:Widget.Holo.Light.Button">
	  <item name="android:background">@drawable/inatapptheme_btn_default_holo_light</item>
  </style>
    <style name="ImageButtoniNatAppTheme" parent="android:Widget.Holo.Light.ImageButton">
	  <item name="android:background">@drawable/inatapptheme_btn_default_holo_light</item>
  </style>
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>
    <style name="ProgressBariNatAppTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
      <item name="android:progressDrawable">@drawable/inatapptheme_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/inatapptheme_progress_indeterminate_horizontal_holo_light</item>
  </style>
    <style name="SpinneriNatAppTheme" parent="android:Widget.Holo.Light.Spinner">
      <item name="android:background">@drawable/inatapptheme_spinner_background_holo_light</item>
      <item name="android:dropDownSelector">@drawable/inatapptheme_list_selector_holo_light</item>
  </style>
    <style name="ToggleiNatAppTheme" parent="android:Widget.Holo.Light.Button.Toggle">
      <item name="android:background">@drawable/inatapptheme_btn_toggle_holo_light</item>
  </style>
    <style name="_iNatAppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="actionBarStyle">@style/iNatActionBar</item>
        <item name="colorPrimary">#ffffff</item>

        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>

        <!--<item name="switchStyle">@style/iNatAppThemeSwitch</item>-->

        <item name="android:editTextBackground">@drawable/inatapptheme_edit_text_holo_light</item>

        <item name="android:textColorHighlight">#99669900</item>
        <item name="android:textSelectHandleLeft">@drawable/inatapptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/inatapptheme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/inatapptheme_text_select_handle_middle</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/inatapptheme_btn_check_holo_light</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/inatapptheme_btn_radio_holo_light</item>

        <item name="android:buttonStyle">@style/ButtoniNatAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtoniNatAppTheme</item>

        <item name="android:dropDownSpinnerStyle">@style/SpinneriNatAppTheme</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBariNatAppTheme</item>

        <item name="android:buttonStyleToggle">@style/ToggleiNatAppTheme</item>

        <item name="android:listChoiceBackgroundIndicator">@drawable/inatapptheme_list_selector_holo_light</item>

        <item name="android:activatedBackgroundIndicator">@drawable/inatapptheme_activated_background_holo_light</item>

        <item name="android:fastScrollThumbDrawable">@drawable/inatapptheme_fastscroll_thumb_holo</item>
    </style>
    <style name="iNatActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
       <item name="android:background">#ffffff</item>
       <item name="elevation">3dp</item>
   </style>
    <style name="iNatAppTheme" parent="@style/_iNatAppTheme"/>
    <style name="iNatAppThemeCustomActionBar" parent="iNatAppTheme">
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>
</resources>